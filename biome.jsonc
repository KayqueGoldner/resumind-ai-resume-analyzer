{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "warn"
      },
      "performance": {
        "noImgElement": "warn"
      },
      "style": {
        "noNestedTernary": "off"
      }
    }
  }
}
